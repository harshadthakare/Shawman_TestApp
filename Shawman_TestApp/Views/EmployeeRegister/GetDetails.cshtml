@model IEnumerable<Shawman_TestApp.Models.EmployeeModel>

@{

    WebGrid grid = new WebGrid(Model);
}

<style type="text/css">
    body {
        font-family: Arial;
        font-size: 10pt;
    }

    .Grid {
        border: 1px solid #ccc;
        border-collapse: collapse;
    }

        .Grid th {
            background-color: #F7F7F7;
            font-weight: bold;
        }

        .Grid th, .Grid td {
            padding: 5px;
            border: 1px solid #ccc;
        }

        .Grid, .Grid table td {
            border: 0px solid #ccc;
        }

            .Grid th a, .Grid th a:visited {
                color: #333;
            }
</style>

<h2>Employee Details</h2>
<br />
@grid.GetHtml(
    htmlAttributes: new { @id = "WebGrid", @class = "Grid" },
    columns: new[]
            {
                grid.Column("Name"),
                grid.Column("DateOfBirth"),
                grid.Column("Email"),
                grid.Column("MobileNo"),
                grid.Column("Designation"),


            })





